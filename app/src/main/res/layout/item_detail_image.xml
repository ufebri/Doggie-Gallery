<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/toolbar_horizontal_padding"
    android:paddingBottom="@dimen/spacing_lg">

    <TextView
        android:id="@+id/tv_action_title"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:text="@string/detail_actions_title"
        android:textColor="@color/text_primary" />

    <TextView
        android:id="@+id/tv_action_subtitle"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_marginTop="@dimen/spacing_xs"
        android:text="@string/detail_actions_subtitle"
        android:textColor="@color/text_secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_action_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/search_card_corner"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/spacing_md"
                android:paddingVertical="@dimen/spacing_md">

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_action_download"
                    app:tint="@color/text_inverse" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Button"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="@string/download"
                    android:textAllCaps="false"
                    android:textColor="@color/text_inverse" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_action_wallpaper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_xs"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="@dimen/search_card_corner"
                app:cardElevation="2dp"
                app:strokeColor="@color/search_bar_stroke"
                app:strokeWidth="@dimen/stroke_thin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/ic_action_set_wallpaper"
                        app:tint="@color/text_primary" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Button"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/set_as_wallpaper"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_action_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="@dimen/search_card_corner"
                app:cardElevation="2dp"
                app:strokeColor="@color/search_bar_stroke"
                app:strokeWidth="@dimen/stroke_thin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/ic_action_share"
                        app:tint="@color/text_primary" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Button"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/share"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_action_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/colorSurface"
            app:cardCornerRadius="@dimen/search_card_corner"
            app:cardElevation="2dp"
            app:strokeColor="@color/search_bar_stroke"
            app:strokeWidth="@dimen/stroke_thin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_sm">

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_action_copy"
                    app:tint="@color/text_primary" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Button"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="@string/copy"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_credit"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_marginTop="@dimen/spacing_md"
        android:gravity="center"
        android:text="@string/copyright"
        android:textColor="@color/text_secondary" />

</LinearLayout>
