<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/bottomSheetStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_draggable="false"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:shapeAppearance="?attr/shapeAppearanceLargeComponent">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_vertical">

        <TextView
            android:id="@+id/tv_action_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            android:elevation="0dp"
            android:text="@string/download"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_action_download" />

        <TextView
            android:id="@+id/tv_action_setWallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            android:elevation="0dp"
            android:maxLines="2"
            android:text="@string/set_as_wallpaper"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_action_set_wallpaper" />

        <TextView
            android:id="@+id/tv_action_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            android:elevation="0dp"
            android:maxLines="2"
            android:text="@string/share"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_action_share" />

        <TextView
            android:id="@+id/tv_action_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            android:elevation="0dp"
            android:maxLines="2"
            android:text="@string/copy"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            app:drawableTopCompat="@drawable/ic_action_copy" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="20dp"
        android:text="@string/copyright"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic" />
</FrameLayout>