<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_item_height_compact"
    android:layout_margin="@dimen/grid_item_margin"
    app:cardCornerRadius="@dimen/grid_item_corner_radius"
    app:cardElevation="@dimen/dimen_zero">

    <ImageView
        android:id="@+id/iv_categories"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_item_height_compact"
        android:alpha="0.75"
        android:background="@color/surface_overlay_dark"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_categories"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/text_inverse"
        android:textStyle="bold"
        tools:text="Hover" />

</androidx.cardview.widget.CardView>
